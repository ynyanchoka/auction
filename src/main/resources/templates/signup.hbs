{{#partial "content"}}

    <div class="row">
        <div class="col-md-3">
            <img id="poster" src="images/onlineauction.jpg">
        </div>
        <div class="col-md-6">
            <h1>Create A New Account</h1>
            <form action="#" method="POST" id="createform">
                <br>
                <div class="mb-3">
                    <label for="fullname" class="form-label">Username</label>
                    <input type="text" class="form-control bg-transparent text-dark" id="fullname" name="fullname" aria-describedby="fullnameHelp" value="" required>
                    <div id="fullnameHelp" class="form-text">Enter your full name here</div>
                </div><br>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control bg-transparent text-dark" id="email" name="email" aria-describedby="emailHelp" value="" required>
                    <div id="emailHelp" class="form-text">Enter a valid email address here</div>
                </div><br>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="text" class="form-control bg-transparent text-dark" id="password" name="password" aria-describedby="passwordHelp" value="" required>
                    <div id="passwordHelp" class="form-text">Set your password here</div>
                </div><br>
                <button type="submit" class="btn" id="loginbutton">CREATE ACCOUNT</button><br>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

{{/partial}}

{{> layout.hbs}}