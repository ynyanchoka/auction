{{#partial "content"}}
    <div class="row main h-100">
        <div class="left col-md-2  h-100 d-flex flex-column align-items-center">
            <div class="header h-25">
                <div class="profile mt-4 text-center">
                    <div class="avatar">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR86BZr6SF24D2-QMUH2beYXdF0yjPq-odTQQ&usqp=CAU"
                             alt="">
                    </div>
                    <p class="name">{{user.fullName}}</p>
                </div>
            </div>
            <div class="body h-75 d-flex mt-5 flex-column  justify-content-between">
                <div class="footer d-flex justify-content-center mb-3 ">
                    <a href="/">
                        <i class="fa fa-shop"></i>
                        Auction
                    </a>

                </div>
                <div class="footer d-flex justify-content-center mb-3 ">
                    <a href="/logout">
                        <img height="30" src="https://img.icons8.com/ios/50/000000/exit.png"/>
                        Log Out
                    </a>

                </div>

            </div>

        </div>

        <div class="right col-md-10  h-100 p-4">
            <div class="nav d-flex justify-content-between">

                <div class="heading mb-4">
                    <h2>Auction Dashboard</h2>
                    <p>Hello {{user.fullName}}</p>
                </div>
                <div class="nav-btn">
                    <img class="mx-3"
                         src="https://img.icons8.com/external-dreamstale-lineal-dreamstale/32/000000/external-search-ui-dreamstale-lineal-dreamstale-2.png"/>
                    <button class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#exampleModal">Create
                        Product
                    </button>
                </div>
            </div>


            <div class="row mb-2">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Total Products</h5>
                            <p class="card-text">12</p>
                        </div>
                    </div>
                </div>

                <div class=" col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Total Users</h5>
                            <p class="card-text">12</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Total Bids</h5>
                            <p class="card-text">12</p>
                        </div>
                    </div>
                </div>
            </div>


            <div class="section-title d-flex justify-content-between">
                <h5>Your Auction Items</h5>
            </div>
            <div class="table">
                <table class="table table-striped table-bordered table-hover mt-3">
                    <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Auction Item</th>
                        <th scope="col">Base Price</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#if auctions}}
                        {{#each auctions}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{itemName}}</td>
                                <td>Ksh. {{basePrice}}</td>
                                <td>
                                    <button onclick="deleteItem('/auction/{{id}}')" class="btn btn-outline-danger">Delete</button>
                                </td>
                            </tr>
                        {{/each}}
                    {{else}}
                        <tr>
                            <td colspan="4">No products found</td>
                        </tr>
                    {{/if}}

                    </tbody>
                </table>

            </div>
        </div>

    </div>

    <!--Modal -->

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/auction" method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Item Name</label>
                            <input type="text" name="name" class="form-control" id="" placeholder="">
                        </div>
                        <div class="form-group ">
                            <label class="form-check-label" for="price">Base Price</label>
                            <input type="number" class="form-control" id="price" name="price">
                        </div>
                        <div class="form-group ">
                            <label class="form-check-label" for="description">Description</label>
                            <textarea rows="10" class="form-control" id="desc" name="description"></textarea>

                        </div>

                        <div class="mb-3">
                            <label for="image" class="form-label">Item Image</label>
                            <input type="file" name="image" class="form-control" id="image" placeholder="">
                        </div>

                        <button type="submit" class="btn btn-dark btn-lg btn-block" data-bs-dismiss="modal">Submit
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>


{{/partial}}
{{>layout.hbs}}